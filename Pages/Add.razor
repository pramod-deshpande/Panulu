@page "/task/{Id?}"


@inject NavigationManager navigation
@inject SnackBarNotificationHelper snackbar


<Heading Title="Task"></Heading>


    <EditForm Model="taskItem" OnSubmit="OnSubmit">
        <CreateOrUpdateTask TaskItem="taskItem"></CreateOrUpdateTask>
    </EditForm>


@code {
    [Parameter] public string? Id { get; set; }

    TaskItem taskItem = new();

    protected override async Task OnInitializedAsync() {
        if (!string.IsNullOrWhiteSpace(Id)) {
            var result = await db.GetItemAsync(int.Parse(Id));
            if (result != null)
                taskItem = result;
        }
        else {
            taskItem = new();
        }
    }

    private async Task OnSubmit() {
        taskItem.CreationDateTime = DateTime.Now;
        taskItem.IsCompleted = false;
        var result = await db.SaveItemAsync(taskItem);
        taskItem = new();
        snackbar.DisplayInfoSnackbar();
        navigation.NavigateTo("/");
    }
}
